# Required for basic functionality
DATABASE_URL=postgresql://user:password@localhost:5432/gloriamundo
OPENROUTER_API_KEY=your_openrouter_api_key

# Optional: Memory system (MongoDB Atlas)
ENABLE_MEMORY_SYSTEM=false
MONGODB_ATLAS_URI=mongodb+srv://user:password@cluster.mongodb.net/chatbot_memory_large?retryWrites=true&w=majority

# Optional: Azure OpenAI (for advanced memory features)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME=text-embedding-3-large
AZURE_OPENAI_CHAT_DEPLOYMENT_NAME=your-chat-model-deployment-name

# Payment processing (Stripe)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Flask application settings
SESSION_SECRET=your_session_secret