modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"

# This deployment section might be used for Replit Deployments, 
# consider updating it too if you deploy that way.
[deployment]
deploymentTarget = "autoscale"
# Added -k uvicorn.workers.UvicornWorker here as well for deployment consistency
run = ["gunicorn", "app:app", "-k", "uvicorn.workers.UvicornWorker", "--bind", "0.0.0.0:5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent" # You can change author if you like

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent" # You can change author if you like

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
# Added "-k", "uvicorn.workers.UvicornWorker" to this command list
args = ["gunicorn", "app:app", "-k", "uvicorn.workers.UvicornWorker", "--bind", "0.0.0.0:5000", "--reuse-port", "--reload"]
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80
