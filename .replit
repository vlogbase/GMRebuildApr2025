modules = ["nodejs-20", "python-3.11", "postgresql-16", "python3"]

[nix]
channel = "stable-24_05"
packages = ["cargo", "freetype", "glibcLocales", "lcms2", "libev", "libiconv", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "libyaml", "openjpeg", "rustc", "tcl", "tk", "xcodebuild", "zlib"]

# Deployment section using main:app and gevent worker
[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "python test_hybrid_workflow.py"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "test_hybrid"

[[workflows.workflow]]
name = "test_hybrid"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_hybrid_workflow.py"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3001

[[ports]]
localPort = 5002
externalPort = 3002

[[ports]]
localPort = 8000
externalPort = 8000
